node {
     	
     	withDockerContainer(image:'python:3.7',args:'--name cib-news -u root -v /var/run/docker.sock:/var/run/docker.sock') { 

	        stage('Environment preparation') {
	                echo "-=- preparing project environment -=-"
	                // Python dependencies
	                sh "curl -fsSL https://download.docker.com/linux/debian && gpg > /tmp/dkey && apt-key add /tmp/dkey && add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/debian \$(lsb_release -cs) stable\" && apt-get update && apt-get -y install docker-ce"
	                sh "python -m pip install numpy"
	                sh "python main.py"
	        }

	        stage('Unit test') {
	                echo "-=- Running unit test -=-"
	                // Python dependencies
	                sh "python test.py"
	        }


    		stage('Build Docker Image') {
	                echo "-=- Running unit test -=-"
	                // Python dependencies
	                sh "docker commit cib-news builds/cib-news"
	        }

	}

}
